{
  "compilerOptions": {
    "module": "ESNext",       // Soporte para módulos ECMAScript
    "esModuleInterop": true,  // Habilitar compatibilidad con módulos CommonJS
    "target": "ES2020",       // Target adecuado para Node.js
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "rootDir": "./src",       // Especifica dónde están los archivos TypeScript
    "outDir": "./dist",       // Los archivos compilados irán aquí
    "declaration": true,      // Genera archivos .d.ts
    "declarationDir": "./types" // Archivos de declaración en esta carpeta
  },
  "exclude": ["test", "types","dist"],
  "ts-node": {
    "esm": true               // Para habilitar soporte ESM en ts-node
  }
}
